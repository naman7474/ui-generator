# Server
PORT=3000

# Playwright / capture defaults
HEADLESS=true
FULL_PAGE_SCREENSHOT=true
NAVIGATION_WAIT_STATE=networkidle
NAVIGATION_TIMEOUT_MS=1200000
POST_LOAD_WAIT_MS=2000
PIXELMATCH_THRESHOLD=0.1
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720
DEVICE_SCALE_FACTOR=1

# Output and concurrency
OUTPUT_DIR=artifacts
MAX_CONCURRENT_RUNS=5
RETENTION_DAYS=30

# LLM (optional)
# Get from Google AI Studio. Leave empty to disable AI features.
GOOGLE_API_KEY=
# Optionally pin model; falls back to sane defaults
# GOOGLE_GEMINI_MODEL=gemini-2.5-flash

# Supabase (optional but required if using DB/Storage features)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
# Public/anon key (used by frontend where applicable)
SUPABASE_ANON_KEY=
SUPABASE_BUCKET=artifacts

# S3 (optional; used if configured)
S3_BUCKET=
S3_REGION=
S3_ENDPOINT=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_PREFIX=
S3_FORCE_PATH_STYLE=false
S3_SIGNED_URL_TTL_SECONDS=3600

# PixelGen/generator service (optional)
GENERATOR_API_URL=http://localhost:8000
# GENERATOR_USE_CHAT=false
# GENERATOR_CREATE_MODEL=gemini-3-pro-preview
# GENERATOR_UPDATE_MODEL=gemini-2.5-flash
# Phases and metrics
# GENERATOR_DESKTOP_ITERS=2
# GENERATOR_MOBILE_ITERS=2
# GENERATOR_JOINT_ITERS=2
# SIMILARITY_METRIC=pixelmatch # options: pixelmatch|ssim|hybrid
# PIXELMATCH_MIN_SIMILARITY=0.92
# SSIM_MIN_SIMILARITY=0.95
# SSIM_DONE_SIMILARITY=0.98
# Phased iteration counts (optional)
# GENERATOR_DESKTOP_ITERS=2
# GENERATOR_MOBILE_ITERS=2
# GENERATOR_JOINT_ITERS=2

# Misc
PREFLIGHT_MAX_ATTEMPTS=5
